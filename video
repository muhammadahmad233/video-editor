    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            $(".click-btn-down").click(function() {
                var link = $(".link").val();
                if (link) {
                    var videoId = getYouTubeVideoId(link);
                    if (videoId) {
                        var thumbnailUrl = 'https://img.youtube.com/vi/' + videoId + '/hqdefault.jpg';
                        $("#video-thumbnail").attr("src", thumbnailUrl).show();
                    }
                    $("#format-selection").show(); // Show format selection
                }
            });

            $(document).on("click", ".format-btn", function() {
                var link = $(".link").val();
                var format = $(this).data("format");
                if (link && format) {
                    downloadVideo(link, format);
                }
            });

            function getYouTubeVideoId(url) {
                var videoId = null;
                var regExp = /^.*(?:youtube\.com\/(?:[^\/\n\s]+\/\S+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/;
                var match = url.match(regExp);
                if (match && match[1]) {
                    videoId = match[1];
                }
                return videoId;
            }

            function downloadVideo(link, format) {
                $("#video-thumbnail").hide();

                var downloadUrl = 'https://loader.to/api/button/?url=' + encodeURIComponent(link) + '&f=' + format;
                $('.download-video').html('<iframe style="width:100%;height:60px;border:0;overflow:hidden;" scrolling="no" src="' + downloadUrl + '"></iframe>');
            }
        });
    </script>
